            "label":"Image"
          },
          {
            "type":"select",
            "id":"text_alignment",
            "label":"Image Alignment",
            "options": [
               {
                 "group": "Image Alignment",
                 "value": "center",
                 "label": "Centered"
               },
               {
                 "group": "Text Alignment",
                 "value": "left",
                 "label": "Left"
               },
               {
                 "group": "Text Alignment",
                 "value": "right",
                 "label": "Right"
               }
            ]
          }
        ]
