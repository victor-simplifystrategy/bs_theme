        "settings": [
          {
            "type":"richtext",
            "id":"text",
            "label":"Text"
          },
          {
            "type":"select",
            "id":"text_alignment",
            "label":"Image Alignment",
            "options": [
               {
                 "group": "Image Alignment",
                 "value": "center",
