<div id="looxReviews" data-loox-aggregate data-limit="{{section.settings.data-limit}}" {% if section.settings.only_photos %}data-mode="img"{% endif %} style="margin:0 auto;max-width:{{section.settings.maxwidth}}px;"></div>
{% schema %}
{
	"name": "All reviews - Grid",
	"class": "index-section",
	"settings": [
		{
			"id": "only_photos",
			"type": "checkbox",
			"label": "Display only reviews with photos",
			"default": false
		},
		{
			"type": "range",
			"id": "data-limit",
			"min": 1,
			"max": 40,
			"step": 1,
			"label": "Number of reviews to display",
			"default": 20
		},
		{
			"type": "range",
			"id": "maxwidth",
			"min": 480,
			"max": 1920,
			"step": 40,
			"unit": "px",
			"label": "Maximum width",
			"default": 1080
		}
	],
	"presets": [{
		"name": "All reviews - Grid",
		"category": "Loox"
	}]
}
{% endschema %}