<div id="swatch-tab-1" class="swatch-tab-content  active" >
  <div class="optionalLabel">Optional: Customize Text</div>
  <div class="parkaText">
    <label>Choose up to 9 characters for the back</label>
    <input type="text" maxlength="9" name="parkaText" id="parkaText" />
  </div> 
  <div class="boatCoat-outline swatch">
  <label class="tab-label">Choose an Outline Color</label>
    
  {% for block in section.blocks %}
    {% assign color = block.settings.color_name %}
      <div data-value="{{block.settings.color}}" class="swatch-element color {{block.settings.color_name}}}">
		  <div class="tooltip">{{block.settings.color_name}}</div>        
        
          <input type="radio" id="outline-{{block.settings.color_name}}" name="boatCoat_outlineColor" value="{{block.settings.color_name | capitalize }}" data-color="{{block.settings.color}}">
          <label name="Color" for="outline-{{block.settings.color_name}}" style="background-color:{{block.settings.color }}"></label>
      </div><!-- Swatch Color Ends -->
	{% endfor %}  
  </div>
</div><!-- #swatch-tab-1 -->
