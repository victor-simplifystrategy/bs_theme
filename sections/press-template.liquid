<!-- /templates/blog.liquid -->
{% comment %}

  Loop through a defined number of articles with the 'paginate' tag.
  Don't forget to close the tag after your loop.

{% endcomment %}

{% assign blogs = blog.articles  %}

{% paginate blog.articles by 4 %}

{% comment %}
  This template is also used for listing out articles of a specific tag.
  You can change layouts or styles by checking if current_tags is true.
{% endcomment %}

<!-- Blog Title -->
<div class="blog-title" style="background-image:url({{section.settings.blog-sidebar-image | img_url:'master'}});">
  <div class="sitewide--title-wrapper">
    {% if current_tags %}
      <h1>{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}</h1>
    {% else %}
      <h1>{{ blog.title }}</h1>
    {% endif %}
  </div>
</div>
<!-- Blog Title --> 


<!-- Inquiry text --> 
<div class="blog-inquire">
  <h3>{{section.settings.blog-inquiry-text}} <a href="mailto:{{section.settings.blog-inquiryEmail}}">{{section.settings.blog-inquiryEmail}}</a></h3>
</div>
<!-- Inquiry Text.end -->




{% endpaginate %}

{% schema %}
{
  "name": "Press pages",
  "settings": [
    {
      "type": "image_picker",
      "id": "blog-sidebar-image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "blog-inquiry-text",
      "label": "Inquiry Text"
    },
    {
      "type": "text",
      "id": "blog-inquiryEmail",
      "label": "Inquiry Email"
    },
    {
      "type": "checkbox",
      "id": "show_blog_tags",
      "label": "Show tags",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_recent_posts",
      "label": "Show 'Recent articles'",
      "default": true
    }
  ]
}
{% endschema %}