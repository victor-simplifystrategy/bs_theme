// Faux Add to Cart

#faux-addToCart{
    background: #0b1c29 !important;
    color: #ffffff;
    transition: all 0.15s ease-in-out 0s;
    display: inline-block;
    font-weight: 700;
    padding: 10px 35px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 12px;
    vertical-align: middle;
    margin-top: 16px;
    margin-left: 20px;
}

#faux-addToCart:hover{
    background: #003e51 !important;
    color: #eeeeee;
  	cursor:pointer;
}

// Close Buttons 

.gba-bop-close{
