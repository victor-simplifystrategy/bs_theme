        width: 0px;
        top: -5px;
        margin-left: 10px;
        border-left: 7px solid transparent;
        border-right: 7px solid transparent;
        border-top: 7px solid #0b1c29;
        margin-bottom: 2px;
      }

      &:hover:after {
        border-top: 7px solid #ffffff;
      }

      &.open:after {
        border-top: 7px solid #ffffff;
      }
    }

    ul {
      border: 1px solid #0b1c29;

      li {
        display: block;
        margin: 0px;

        a {
          padding: 0px;
          border: none;
          width: 100%;
          padding: 5px;
