/*///////////////////////
BOLD PRODUCT OPTIONS 
/////////////////////////*/

// Remove Unwanted elements
.bold_option_product_title {
  display: none;
}

.bold_option_total {
  display: none;
}

// Checkboxes

.bold_option_checkbox .bold_option_element input {
  height: 0px;
  position: relative;
  margin-right: 20px;
}

.bold_option_checkbox .bold_option_element input:after {
  display: inline-block;
  content: "\f096";
  font-family: "fontawesome";
  font-size: 35px;
  vertical-align: middle;
  margin-right: 10px;
  font-weight: 100;
  vertical-align: top;
  margin-top: -34px;
  cursor: pointer;
  position: absolute;
}

.bold_option_checkbox .bold_option_element input:checked:after {
  content: "\f046";
  font-family: "fontawesome";
}

.bold_option_checkbox input {
  /* display: none !important; */
}

.bold_option_checkbox {
  label {
    span {
      font-weight: bold !important;
      font-size: 21px;
      color: #0b1c29;
    }

    cursor: pointer;
  }

  .bold_option_value_price {
    &:before {
      display: inline-block;
      content: "(+ ";
    }

    &:after {
      display: inline-block;
      content: ")";
    }
  }
}

/* Input Boxes */
.bold_option_textbox span {
  max-width: 50%;
  display: inline-block;
}

.bold_option_textbox span.bold_option_title {
  font-size: 19px;
  margin-right: 10px;
  display: none;
}

.bold_help_text {
  font-size: 19px;
  margin-right: 10px;
  display: block !important;
  font-size: 17px;
  margin-right: 10px;
  float: left;
  display: block !important;
  margin-top: 6px;
  font-style: initial !important;
  max-width: 47% !important;

  @media (max-width: 480px) {
    max-width: 100% !important;
    text-align: center;
  }
}

.bold_option_textbox span input[type="text"] {
  max-width: 50%;
}

.bold_option_textbox:after {
  clear: both;
  display: block;
  content: "";
}

@media (max-width: 480px) {
  .bold_option_textbox span.bold_option_title {
    font-size: 14px !important;
  }

  .bold_option_checkbox label {
    text-align: center;
    display: block !important;
    padding: 10px 0px;
  }

  .bold_option_checkbox label span {
    font-weight: bold !important;
    font-size: 15px;
    color: #0b1c29;
  }

  .bold_option_checkbox .bold_option_title:before {
    font-size: 16px;
  }

  .bold_option_textbox span {
    max-width: 100%;
    text-align: center;
    width: 100%;
  }

  .bold_option_textbox span input[type="text"] {
    max-width: 100%;
    margin-top: 10px;
    display: block;
    width: 100%;
  }
}

