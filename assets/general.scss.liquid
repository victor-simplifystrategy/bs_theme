.navigation-button{
  a{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    max-width: 225px;
    line-height:1em;
    padding:15px 5%;
    
    svg{
      	transition:ease-in-out 0.2s;
    	fill:#051c2a;
      	max-width:20px;
      	width:100%;
      	margin-right:8px;
    }
    
    &:hover{
      svg{
      	fill:#ffffff;
      }
    }
  }
}