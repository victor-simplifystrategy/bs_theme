
/*============================
Product Video
=============================*/

.videoPopup{
	position:fixed;
  	display:none;
  	top:0px;
  	left:0px;
  	width:100%;
  	height:100%;
  	align-items:center;
  	justify-content:center;
  	z-index:99999;
  
  .content-popup{
  	max-width:700px;
    z-index:99;
    position:relative;
  }
  
  .wrapper-popup{
    position: relative;
    width: 100%;
    height: 100%;
  	padding:0px 35px;
    
    display: flex;
    align-items: center;
    justify-content: center;  
  }
  
  .overlay-trigger{
    position:absolute;
    top:0px;
    left:0px;
    width:100%;
    height:100%;
    background-color:rgba(0,0,0,0.5);
  }
}


.video-trigger{
  position:absolute;
  z-index:2;
  margin-top:20px;
  margin-left:20px;
  cursor:pointer;
  i{
    font-size:70px;
  	color:#0b1c29;
  }
  
  &:hover{
  	opacity:0.8;
  }
  
  @media(max-width:768px){
    i{
    	font-size:40px;
    }
  }
}

.close-video-popup{
    right: -15px;
    position: absolute;
    font-size: 40px;
    color: #ffffff;
    cursor: pointer;
  	z-index:999;
    top: -18px;
}