{% for block in section.blocks %}

{% if block.type == 'text_section' %}

  <!-- Text Section -->
  <div class="gba-section_text gba_section contained">
    <h2 class="section_title">{{block.settings.title_env_resp}}</h2>
    <div class="align-{{block.settings.text_alignment_env_resp}} section_content">{{block.settings.text_env_resp}}</div>
  </div>
  <!-- Text Section Ends -->

{% elsif block.type == 'text_element' %}

  <!-- Image with text_element -->
  <div class="gba-textElement {{block.settings.full_width_env_resp}} align-{{block.settings.text_alignment_env_resp}}">
	<{{block.settings.formatting_env_resp}}>{{block.settings.text_env_resp }}</{{block.settings.formatting_env_resp}}>
  </div>
  <!-- Image with text element --> 

{% elsif block.type == 'image_text_overlay' %}

  <!-- Image with text overlay -->
  <div class="gba-image_text_overlay  contained" style="background-image:url('{{block.settings.image_env_resp | img_url:'master' }}');">
    <div class="va-wrapper">
    <h1 class="align-{{block.settings.text_alignment_env_resp}}" style="color:{{block.settings.text_color_env_resp}};">{{block.settings.title_env_resp}}</h1>
      
    </div>
  </div>
    <div>
    {% if block.settings.mobile_image_env_resp == blank %}
      {% assign image = block.settings.image_env_resp | img_url:'master' %}
    {% else %}
      {% assign image = block.settings.mobile_image_env_resp | img_url:'master' %}      
    {% endif %}
    <div class="mobileImage" style="background-image:url('{{image}}');"> </div>
    <h2 class="mobileTitle">{{block.settings.title_env_resp}}</h2>    
    </div>    
  <!-- Image with text overlay --> 
    
{% elsif block.type == 'question_answer' %}

  <!-- Image with text overlay -->
  <div class=" gba-textElement gba-question_answer align-{{block.settings.text_alignment_env_resp}} {{block.settings.full_width_env_resp}}" >
    <h4>{{block.settings.title_env_resp}}</h4>
    {{block.settings.text_env_resp}}
  </div>
  <!-- Image with text overlay -->     

{% elsif block.type == 'image' %}

  <!-- Image Section -->
  <div class="gba-section_image gba_section contained align-{{block.settings.text_alignment_env_resp}}">
      <img src="{{block.settings.image_env_resp | img_url:'master' }}" />
  </div>
  <!-- Image Section --> 

{% elsif block.type == 'image_column' %}

  <!-- Image column -->
  <div class="gba-section_imageColumn gba_section contained">
    <h2 class="section_title">{{block.settings.title_env_resp}}</h2>
    <div class="gba-row">
      <div class="image_area_mobile">
        <img src="{{block.settings.image_env_resp | img_url:'master'}}" />
      </div>      
      <div class="column span-6 leftSide">
         <div class="text_area">
          <h4>{{block.settings.subtitle_env_resp}}</h4>
          <div>
            {{block.settings.text_env_resp}}
          </div>
          {% if block.settings.url_env_resp != blank %}
            <a class="section_button" href="javascript:popup_bl_tag('c6a19537c927000');" id="button_{{block.id}}" >
              {% if block.settings.button_image_env_resp != blank %}
              	<img src="{{block.settings.button_image_env_resp | img_url:'master'}}" />
              {% else %}
                {{block.settings.link_title_env_resp}}
              {% endif %}
            </a>
          {% endif %}
        </div>
      </div>
      <div class="column span-6 image_area rightSide" style="background-image:url({{block.settings.image_env_resp | img_url:'master'}});">
      </div>
    </div>
  </div>
  <!-- Image Column Ends --> 


{% elsif block.type == 'button' %}

  <!-- Image column -->
  <div class="gba-section_button gba_section contained">
    {% if block.settings.url_env_resp != blank %}
    <a class="btn" href="{{block.settings.url_env_resp}}">{{block.settings.link_title_env_resp}}</a>
    {% endif %}
  </div>
  <!-- Image Column Ends --> 

{% elsif block.type == 'full_width_section' %}

  <!-- Full wdith section -->
  <div class="gba-section_fullWidth gba_section contained">
    <h2 class="section_title">{{block.settings.title_env_resp}}</h2>
    <div class="gba-row">
      <div class="column span-6 image_area" >
        <img src="{{block.settings.image_env_resp | img_url:'master'}}" />
      </div>   
      <div class="column span-6 blurb">
         <div>
          <h4>{{block.settings.subtitle_env_resp}}</h4>
          <div>
            {{block.settings.text_env_resp}}
          </div>
        </div>
      </div>

    </div>
  </div>



{% elsif block.type == 'double_image_column' %}

	
